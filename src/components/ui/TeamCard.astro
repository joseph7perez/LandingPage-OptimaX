---
// TeamCard.astro

export interface Props {
  name: string;
  role: string;
  description: string;
  skills: string[];
  image: string;
  alt?: string;
  links?: {
    linkedin?: string;
    github?: string;
  };
}

const {
  name,
  role,
  description,
  skills,
  image,
  alt = "Foto del miembro del equipo",
  links = {},
} = Astro.props;
---

<div
  class="group flex flex-col bg-white dark:bg-[#1A2633] rounded-xl overflow-hidden shadow-sm hover:shadow-lg transition-all duration-300 hover:-translate-y-1 border border-slate-200 dark:border-slate-800"
>
  <!-- Imagen -->
  <div class="h-64 w-full bg-slate-200 relative overflow-hidden">
    <img
      src={image}
      alt={alt}
      class="w-full h-full object-cover object-top group-hover:scale-105 transition-transform duration-500"
    />
    <div class="absolute inset-0 bg-gradient-to-t from-black/60 to-transparent opacity-60"></div>
  </div>

  <!-- Contenido -->
  <div class="flex flex-col p-6 gap-4 grow">
    <div>
      <h3 class="text-xl font-bold text-slate-900 dark:text-white">
        {name}
      </h3>
      <p class="text-blue-500 font-medium text-sm mt-1">
        {role}
      </p>
    </div>

    <p class="text-slate-600 dark:text-slate-400 text-sm leading-relaxed">
      {description}
    </p>

    <!-- Skills -->
    <div class="mt-auto pt-4 border-t border-slate-100 dark:border-slate-700/50">
      <p class="text-xs font-semibold text-slate-500 dark:text-slate-500 mb-3 uppercase tracking-wide">
        Habilidades
      </p>
      <div class="flex flex-wrap gap-2">
        {skills.map(skill => (
          <span
            class="inline-flex items-center px-2.5 py-1 rounded-md text-xs font-medium bg-[#44A9FF]/10 text-[#44A9FF] dark:bg-[#44A9FF]/20 dark:text-blue-300"
          >
            {skill}
          </span>
        ))}
      </div>
    </div>

    <!-- Redes -->
    <div class="flex gap-3 mt-2 text-slate-400">
      {links.linkedin && (
        <a
          href={links.linkedin}
          aria-label="LinkedIn"
          class="hover:text-[#44A9FF] transition-colors"
        >
          <span class="material-symbols-outlined text-xl">work</span>
        </a>
      )}

      {links.github && (
        <a
          href={links.github}
          aria-label="GitHub"
          class="hover:text-[#44A9FF] transition-colors"
        >
          <span class="material-symbols-outlined text-xl">code</span>
        </a>
      )}
    </div>
  </div>
</div>
