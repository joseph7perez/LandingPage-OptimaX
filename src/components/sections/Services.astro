---
import { commonTexts as commonTextsES } from "../../data/es/services"
import { services as servicesES} from "../../data/es/services"
---

<!-- Header -->
<div class="text-center max-w-3xl mx-auto mb-8 md:mb-14">
  <h2 class="text-3xl md:text-4xl font-bold text-[#020617] dark:text-white mb-4">{commonTextsES.title}</h2>
  <p class="text-slate-600 md:text-lg dark:text-slate-400">{commonTextsES.subtitle}</p>
</div>

<!-- Grid -->
<div class="grid gap-6 sm:grid-cols-2 lg:grid-cols-4">
  {servicesES.map(({ title, description, icon: Icon, link }) => (
    <div class="group bg-blue-50 rounded-2xl p-5 md:p-6 shadow-sm hover:shadow-lg transition-all duration-300 dark:bg-slate-800">
      <Icon class="size-5 md:size-8 text-blue-500 mb-1 md:mb-4" />
      <h3 class="text-lg font-semibold text-[#020617] mb-2 dark:text-gray-200">{title}</h3>
      <p class="text-sm text-[#020617] md:mb-4 dark:text-slate-300">{description}</p>
      <a
        href="#contact"
        class="inline-flex items-center text-primary font-medium text-sm hover:underline dark:text-white"
      >
        {link}
      </a>
    </div>
  ))}
</div>