---
import { buttons } from "../../data/es/common"
import { commonTexts, form, contactInfo } from "../../data/es/contac"

---
<div class="flex flex-col gap-4 mb-8 text-center items-center">
  <h1 class="text-slate-900 dark:text-white text-3xl md:text-4xl font-bold leading-tight tracking-[-0.033em]">{commonTexts.title}</h1>
  <p class="text-slate-500 dark:text-slate-400 md:text-lg font-normal leading-normal max-w-2xl">{commonTexts.description}</p>
</div>
<div class="grid grid-cols-1 lg:grid-cols-12 gap-8 lg:gap-12 items-start">
  <!-- Contact Form Section (Left) -->
  <div
    class="lg:col-span-7 bg-white dark:bg-slate-800 rounded-2xl shadow-sm border border-slate-200 dark:border-slate-700 p-6 md:p-8"
  >
    <form class="flex flex-col gap-6">
      <div class="flex flex-col md:flex-row gap-6">
        {form.fields.map(field => (
          <label class="flex flex-col flex-1 ">
            <span class="text-slate-900 dark:text-white text-sm font-semibold mb-2">{field.label}</span>
            <input
              class="w-full h-12 p-3 rounded-lg border-slate-200 dark:border-slate-600 bg-slate-50 dark:bg-slate-900 text-slate-900 dark:text-white placeholder:text-slate-400 focus:border-[#137fec] focus:ring-1 focus:ring-[#137fec] transition-all"
              placeholder={field.placeholder}
              type={field.type}
            />
          </label>
        ))}
      </div>
      <label class="flex flex-col w-full">
        <span class="text-slate-900 dark:text-white text-sm font-semibold mb-2">{form.labelSubject}</span>
          <div class="relative">
            <select
              id="reason"
              class="peer w-full h-12 pl-4 pr-12 rounded-xl border border-slate-300 dark:border-slate-700
                    bg-slate-50 dark:bg-[#0F172A] text-slate-900 dark:text-white
                    focus:outline-none focus:ring-2 focus:ring-[#137fec]/50 focus:border-[#137fec]
                    hover:border-slate-400 dark:hover:border-slate-600
                    transition-all appearance-none cursor-pointer text-sm"
            >
              <option value="" disabled selected>
                {form.selectedOption}
              </option>
              {form.options.map(option => (
                <option value={option.value}>{option.name}</option>
              ))}
            </select>

            <!-- Icono flecha -->
            <div
              class="pointer-events-none absolute inset-y-0 right-4 flex items-center text-slate-400 peer-focus:text-[#137fec] transition"
            >
              <svg
                xmlns="http://www.w3.org/2000/svg"
                class="size-4"
                fill="none"
                viewBox="0 0 24 24"
                stroke="currentColor"
              >
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                  d="M19 9l-7 7-7-7" />
              </svg>
            </div>
          </div>
      </label>
      <label class="flex flex-col w-full">
        <span class="text-slate-900 dark:text-white text-sm font-semibold mb-2">{form.labelMessage}</span>
        <textarea
          class="w-full min-h-40 rounded-lg border-slate-200 dark:border-slate-600 bg-slate-50 dark:bg-slate-900 text-slate-900 dark:text-white placeholder:text-slate-400 focus:border-[#137fec] focus:ring-1 focus:ring-[#137fec] transition-all resize-y p-3"
          placeholder={form.placeholderMessage}
        ></textarea>
      </label>
      <div class="pt-2 flex justify-center">
        <button
          class="flex w-full md:w-auto items-center justify-center rounded-lg h-12 px-8 bg-[#137fec] text-white text-base font-bold hover:bg-blue-600 transition-colors shadow-lg shadow-blue-500/25 cursor-pointer uppercase"
          type="button"
        >
          {buttons.submit}
        </button>
      </div>
    </form>
  </div>
  <!-- Info & Map Section (Right) -->
  <div class="lg:col-span-5 flex flex-col gap-8">
    <!-- Contact Info Card -->
    <div
      class="bg-white dark:bg-slate-800 rounded-2xl shadow-sm border border-slate-200 dark:border-slate-700 p-6 md:p-8 flex flex-col gap-6"
    >
      <h3 class="text-slate-900 dark:text-white text-xl font-bold">{contactInfo.title}</h3>
      <div class="flex flex-col gap-6">
        {contactInfo.options.map(({name, description, contact, href, icon: Icon}) => (
          <div class="flex items-start gap-4 group">
            <a
              class="flex items-center justify-center size-10 rounded-full bg-blue-50 dark:bg-blue-900/30 text-[#137fec] group-hover:bg-[#137fec] group-hover:text-white transition-colors"
              href={href}
            >
              <Icon class="size-5 md:size-6" />
            </a>
            <div>
              <a
                class="text-slate-500 dark:text-slate-400 hover:text-[#137fec] transition-colors"
                href="mailto:optimaxai@gmail.com"
                >
                <p class="text-sm font-semibold text-slate-900 dark:text-white" >{name} </p>
                {contact}
              </a>
              <p class="text-xs text-slate-400 mt-0.5">{description}</p>
            </div>
          </div>
        ))}
      </div>
    </div>         
  </div>
</div>